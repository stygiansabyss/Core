        }
    ],
    "require": {
        "php": ">=5.3.0",
        "illuminate/support": "4.1.*",
        "laravel/framework": "4.1.*",
        "way/generators": "*",
        "wisembly/elephant.io": "*",
        "juy/profiler" : "*",
        "intervention/image": "*",
        "knplabs/github-api": "*",
        "mccool/laravel-auto-presenter": "*",
        "anlutro/curl": "dev-master",
        "vespakoen/menu": "dev-master"
    },
    "autoload": {
        "classmap": [
            "src/controllers",
            "src/database/migrations",
            "src/database/seeds",
            "src/models",
            "src/presenters",
            "src/services",
            "src/views"
        ],
        "psr-0": {
            "Syntax\\Core\\": "src/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
